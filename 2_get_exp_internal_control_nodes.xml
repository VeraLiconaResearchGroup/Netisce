<tool id="netisce2" name="Netisce Step 2" version="0.1.0" python_template_version="3.5">

    <description>Extracts Internal-marker node values from attractors generated from experimental data</description>

    <requirements>
        <requirement type="package" version="1.1.5">pandas</requirement>
        <requirement type="package" version="3.5.0">sys</requirement>
    </requirements>

    <command>python3 '$__tool_directory__/bin/get_RONs.py'  '$attrs_exp' '$icn' </command>

    <inputs>
        <param name="icn" type="data" format="txt" label="Internal Control Nodes"/>
        <param name="attrs_exp" type="data" format="tabular" label="Experimental Attractors"/>
    </inputs>

    <outputs>
        <data name="output" format="tabular" from_work_dir="exp_internalmarkers.tsv" label="Internal-marker nodes from experimental attractors"/>
    </outputs>

    <tests>
        <test expect_num_outputs="1">
            <param name="attrs_exp" value="attrs_exp.tsv" />
            <param name="icn" value="internal_control.txt" />
            <output name="output" file="exp_internalmarkers.tsv" ftype="tsv" />
        </test>
    </tests>

    <help>
    This tool extracts Internal-marker node values from attractors generated from experimental data.
    Required Inputs:
    1. output from netisce step 1
    2. internal control nodes in txt format
    </help>

</tool>